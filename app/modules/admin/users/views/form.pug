extends ../../../../templates/master

block content
    h1.title    
        span.fa(class= user ? 'fa-user' : 'fa-user-plus')
        | &nbsp; #{user ? 'Edit': 'Add'} User

    form(method="POST" action=`/admin/users${user ? `/${user.id}?_method=PUT` : ''}`)
        .field 
            .label Username
            .control
                input.input(type="text" name="username" value=user ? user.username : '')
        .field
            .label E-mail
            .control
                input.input(type="email" name="email" value=user ? user.email : '')
        
        if !user
            .field
                .label Password
                .control
                    input.input(type="password" name="password")
        .field  
                .label Birthday
                .control    
                    input.input(type =user?"text" :"date" name ="birthday" value= user ? birthdate : '')

        input.button.is-primary(type="submit" value="Submit")